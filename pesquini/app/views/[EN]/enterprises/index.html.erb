<div id="enterprises_index">


  <div class="search_form">
      <div class="container">

        <div class="service">

        </div>

        <div class="search_form_enterprises">
          <h1>Search Engine</h1>
          <hr>
          <%= search_form_for @search do |f| %>
            <%= f.label :corporate_name_cont, "Name or CNPJ:" %>
            <%= f.search_field :corporate_name_cont%>
            <%= f.submit %>
          <% end %>
 <!--         <div class="additional_search">
            <i class="fa fa-angle-double-down fa_down"></i>
            <h4><strong>Mais opções de busca</strong></h4>
          </div>-->
        </div>

    </div>
  </div>

  <span class="division"> <hr> </span>

  <div class="container">

    <% if @enterprises.blank? %>
      <div class="entreprises_title">
        <h3>There are no sanctions against the company searched.</h3>
        <hr>
      </div>

    <% else %>
      <div class="entreprises_title">
        <h1> List of enterprises found</h1>
        <hr>
      </div>
      <% @enterprises.each do |p| %>
        <span class="same_line">  <h3>Enterprise:</h3><%= link_to p.corporate_name, p %>  </span>
        <span class="same_line">  <h3>CNPJ:</h3> <%= p.cnpj %>  </span>
        <hr>
      <% end %>
    <% end %>
   <div class="pagination">
      <%= will_paginate @enterprises, renderer: BootstrapPagination::Rails %>
    </div>
  </div>

</div>
