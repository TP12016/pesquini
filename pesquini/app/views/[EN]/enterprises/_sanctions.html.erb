<div class =" lowercase-letter">
  <% @sanctions.each_with_index do |sanction, index| %>

    <h4><b><div class= "index_number">
      <%= @page_number*@per_page + index +1%>
    </div></b></h4>
    <h4> <b>Sanctioning Organ: </b> <%= sanction.sanction_organ.downcase! %> </h4>
    <h4> <b> Process Number: </b> <%= sanction.process_number %> </h4>
    <h4> <b>Initial Sanction Date: </b> <%= sanction.initial_date.nil? ? "Not informed" :sanction.initial_date.strftime("%m/%d/%Y") %> </h4>
    <h4> <b> End Sanction Date: </b> <%= sanction.final_date.nil? ? "Not informed"  :sanction.final_date.strftime("%m/%d/%Y") %> </h4>
    <h4> <b> UF: </b> <%= sanction.state.nil? ? "Not informed" : sanction.state.abbreviation %> </h4>
    <h4> <b> Sanction Type: </b> <%= sanction.sanction_type.nil? ? "Not informed" : sanction.sanction_type.description.downcase! %> </h4>
    <% if @enterprise.payment_after_sanction? %>
    <h4>Contract before Sanction? : <span class="glyphicon glyphicon-ok"> </h4>
    <% else %>
    <h4>Contract before Sanction? :   <span class="glyphicon glyphicon-remove"> </h4>
    <% end %>
    <hr align="left">
  <% end %>

  <% if @sanctions.empty? %>
    <h3> Data on sanctions not informed  </h3>
  <% end %>

  <%= will_paginate @sanctions,  renderer: BootstrapPagination::Rails %>

</div>