<div id="enterprises_index">

  <div class="search_form">
      <div class="container">

        <div class="service">

        </div>

        <div class="search_form_enterprises">
          <h1><%= t('Ferramenta de busca')%></h1>
          <hr>

          <%= search_form_for @search do |find| %>
            <%= find.label :corporate_name_cont, t('Nome ou CNPJ') %>
            <%= find.search_field :corporate_name_cont%>
            <%= find.submit %>
          <% end %>

        </div>

    </div>
  </div>

  <span class="division"> <hr> </span>

  <div class="container">

    <% if @enterprises.blank? %>
      <div class="entreprises_title">
        <h3><%= t('Não existem sanções contra a empresa procurada')%>.</h3>
        <hr>
      </div>

    <% else %>
      <div class="entreprises_title">
        <h1><%= t('Lista das empresas encontradas')%></h1>
        <hr>
      </div>

      <% @enterprises.each do |enterprise_found| %>
        <span class="same_line">  <h3>Empresa:</h3><%= link_to enterprise_found.corporate_name, enterprise_found %>  </span>
        <span class="same_line">  <h3>CNPJ:</h3> <%= enterprise_found.cnpj %>  </span>
        <hr>
      <% end %>
      
    <% end %>

   <div class="pagination">
      <%= will_paginate @enterprises, renderer: BootstrapPagination::Rails %>
    </div>
  </div>

</div>
